{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "react",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "ts-node": { "files": true },
  "include": ["src/**/*.ts"]
}
